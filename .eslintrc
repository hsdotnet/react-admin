{
  "extends": "eslint:recommended",
  "rules": {
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "no-console": 0,
    "comma-dangle": [2, "never"],
    "no-unused-vars": 0,
    "no-constant-condition": 0,
    "no-multiple-empty-lines": [1, {"max": 1}],
    "no-underscore-dangle": 2,
    "no-trailing-spaces": 2,
    "no-multi-spaces": 2,
    "no-alert": 2,
    "no-extra-parens": 2
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": [
    "react"
  ]
}